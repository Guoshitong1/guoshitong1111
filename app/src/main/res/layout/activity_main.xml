<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:orientation="vertical">
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#EA3425"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/jingdonggou"
            />
        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="京东"
            android:textSize="30sp"
            android:textColor="#FFF"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <GridView
            android:numColumns="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </GridView>


    </LinearLayout>
    <RadioGroup
        android:layout_weight="1"
        android:id="@+id/rg"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        >
        <RadioButton
            android:onClick="shuaxin"
            android:layout_weight="1"
            android:button="@null"
            android:layout_width="0dp"

            android:background="@drawable/shuaxin"
            android:layout_height="match_parent" />
        <RadioButton
            android:onClick="faxian"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:button="@null"
            android:background="@drawable/faxian"
            android:layout_height="match_parent" />
        <RadioButton
            android:onClick="xiaoxi"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:button="@null"
            android:background="@drawable/xiaoxi1"
            android:layout_height="match_parent" />
        <RadioButton
            android:onClick="gouwuche"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:button="@null"
            android:background="@drawable/gouwuche"
            android:layout_height="match_parent" />
        <RadioButton
            android:onClick="wode"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:button="@null"
            android:background="@drawable/wode2"
            android:layout_height="match_parent" />

    </RadioGroup>


</LinearLayout>